{
    "name": "maosal/flarum-ext-web-push",
    "description": "Adds Web Push notification feature to flarum with OneSignal service",
    "type": "flarum-extension",
    "keywords": ["flarum", "push", "notification", "web", "onesignal"],
    "author": {
        "name": "Kevin PAULMIER, Nikolas Denis"
    },
    "license": "MIT",
    "require": {
        "flarum/core": "^1.7",
        "norkunas/onesignal-php-api": "v2.11.0",
        "php-http/guzzle6-adapter": "^2.0.2"
    },
    "support": {
        "source": "https://github.com/altsalih/flarum-ext-web-push",
        "issues": "https://github.com/altsalih/flarum-ext-web-push/issues"
    },
    "autoload": {
        "psr-4": {
            "MaoSal\\WebPush\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Web Push Notification",
            "icon": {
                "name": "fas fa-bullhorn",
                "backgroundColor": "#3e6045",
                "color": "#fff"
            }
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}